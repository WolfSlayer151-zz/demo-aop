package com.jdbc;
import java.sql.*;

public class jdbcDemo
{
	public static void main(String args[]) throws ClassNotFoundException, SQLException
	{
		int id=4;
		String name="guy";
		int salary=3000;
		String dept="CS";
		Class.forName("com.mysql.cj.jdbc.Driver");
		Connection con = DriverManager.getConnection("jdbc:mysql://localhost:3306/axis","root","12345");
		Statement st=con.createStatement();
		ResultSet r=st.executeQuery("select * from employee");
		int x=st.executeUpdate("insert into employee values('"+id+"','"+name+"','"+salary+"','"+dept+"')");
		if (x>0)
		{
			System.out.println("Insert successfull");
		}
		else
		{
			System.out.println("Insert failed");
		}
		while(r.next())
		{
			r.getInt("id");
			System.out.println(r.getLong("id") + "  " + r.getString("name") + "  " + r.getLong("salary") + "  " + r.getString("dept"));
		}
		
	}
}
